{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,                 // Mengizinkan file .js dalam proyek TypeScript
    "checkJs": false,                 // Menonaktifkan pemeriksaan TypeScript di file JavaScript
    "resolveJsonModule": true,        // Mengizinkan impor modul JSON
    "moduleResolution": "node",       // Menentukan strategi resolusi modul ke "node"
    "skipLibCheck": true              // Melewati pemeriksaan tipe di file deklarasi (.d.ts)
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"] // Menyaring file yang tidak diperlukan
}
